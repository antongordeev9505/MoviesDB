<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/titleColor</item>
    </style>

    <style name="SubtitleTextStyle">
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:textColor">@color/subTitleColor</item>
    </style>

    <style name="CollapsingTitle">
        <item name="android:textSize">@dimen/dimen_20sp</item>
    </style>

    <style name="TaglineText">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/subTitleColor</item>
    </style>

    <style name="InfoMovieText">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleCategoryText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen_24sp</item>
        <item name="android:textColor">@color/titleColor</item>
    </style>



</resources>